
<%= simple_form_for(hetzner_server) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :number %>
    <%= f.input :name %>
    <%= f.input :ipv4 %>
    <%= f.input :ipv6 %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
